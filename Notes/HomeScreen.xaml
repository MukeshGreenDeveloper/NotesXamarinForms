<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.HomeScreen">
    <ContentPage.Content>
        <StackLayout Background="white" VerticalOptions="FillAndExpand">
            
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand"
                         VerticalOptions="Fill">
                <Frame BackgroundColor="{x:StaticResource Key=SearchBarBG}"
                       CornerRadius="30"
                       Padding="18"
                       Margin="30,15,30,15"
                       HeightRequest="20"
                       HasShadow="False"
                       VerticalOptions="Start"
                       HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Horizontal">
                        <Image Source="ham_menu" 
                           HorizontalOptions="Start"
                           HeightRequest="20"
                           VerticalOptions="Center"
                           WidthRequest="20"/>
                        <Label Text="Search your notes"
                           FontSize="Medium"
                           Margin="15,-3,0,0"
                           VerticalTextAlignment="Start"
                           VerticalOptions="Center"
                           FontFamily="PopinsRegular"/>
                        <Image Source="menu_box"
                               HorizontalOptions="EndAndExpand"
                               HeightRequest="20"
                               Margin="15,0,0,0"
                               VerticalOptions="Center"
                               WidthRequest="20"/>
                        <Frame BorderColor="{x:StaticResource TransparentGray}"
                                   CornerRadius="30"
                                   Padding="0,0,0,0"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                    HorizontalOptions="EndAndExpand">
                            <Image Source="bulb"
                                        HeightRequest="4"/>
                        </Frame>

                    </StackLayout>
                </Frame>
            </StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout  Grid.Row="0"
                              Grid.Column="0"
                              VerticalOptions="FillAndExpand">
                
                <ScrollView x:Name="scroller"
                            Orientation="Vertical"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="Fill"
                            Grid.RowSpan="10"
                            Grid.ColumnSpan="10">
                    <StackLayout x:Name="stacker"
                                 VerticalOptions="Start"
                                 Padding="0"
                                 Spacing="0">
                        <Grid HorizontalOptions="FillAndExpand"
                              VerticalOptions="StartAndExpand"
                              RowSpacing="10"
                              ColumnSpacing="20"
                              Margin="0,0,0,-160"
                              x:Name="gridNotes">
                        </Grid>
                    </StackLayout>
                </ScrollView>

                <Grid HorizontalOptions="FillAndExpand"
                             Grid.Row="0"
                             Grid.Column="0"
                             MinimumHeightRequest="50">
                    <!--//Box Thing-->
                    <Frame BackgroundColor="{StaticResource Key=SearchBarBG}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="EndAndExpand"
                           HasShadow="False"
                           HeightRequest="60"
                           MinimumHeightRequest="60"
                           Padding="0,0,30,0">
                        <Grid HorizontalOptions="End">
                            <Image Source="curved_bottom_bg_gray"
                                   Aspect="AspectFill"
                                   WidthRequest="80"
                                   VerticalOptions="Start" />
                        </Grid>
                    </Frame>
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="FillAndExpand"
                                 Margin="0,0,0,10"
                                 VerticalOptions="End">
                        <ImageButton BackgroundColor="Transparent"
                                     Source="checkbox"
                                     Margin="10,0,0,0"
                                     Padding="10" />
                        <ImageButton BackgroundColor="Transparent"
                                     Source="brush"
                                     Margin="15,0,0,0"
                                     WidthRequest="30" />
                        <ImageButton BackgroundColor="Transparent"
                                     Source="mic"
                                     WidthRequest="25"
                                     Margin="20,0,0,0" />
                        <ImageButton BackgroundColor="Transparent"
                                     Source="picture"
                                     WidthRequest="25"
                                     Margin="20,0,0,0" />
                    </StackLayout>
                   
                </Grid>
            </StackLayout>

                <ImageButton BackgroundColor="{StaticResource Key=SearchBarBG}"
                             Source="plus"
                             Margin="0,0,40,40"
                             Padding="18"
                             VerticalOptions="End"
                             CornerRadius="14"
                             Clicked="openAddPage"
                             HorizontalOptions="End" />
            </Grid>
